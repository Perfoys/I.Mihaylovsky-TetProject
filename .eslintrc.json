{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "standard",
        "plugin:css-modules/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "css-modules",
        "jest-dom",
        "testing-library"
    ],
    "rules": {
        "semi": ["error", "always"],
        "import/order": ["error", {"groups": ["external", "builtin", "internal"]}],
        "indent": ["error", 2]
    }
}
